<h1 class="center-align"><b>Eat-Da-Burger!</b></h1>
<img id="burger" src="../assets/img/burger.png">


<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="col s4 offset-s2">
        <h4>Burgers to be devoured</h4>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.id}}. {{this.burger_name}}
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit">DEVOUR THAT BURGER!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col s4">
        <h4>Burgers that have been devoured!</h4>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.id}}. {{this.burger_name}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <form class="col s4 offset-s4 create-update-form" action="burgers/create" method="POST">
    <div class="row center-align">
      <div class="form-group">
        <input type="text" id="bn" name="burger_name">
      </div>
      <p class="center-align"> Type the name of a burger you'd like to eat </p>
      <button type="submit">Add Burger To Devour!</button>
    </div>
  </form>
</div>