<h1>Eat-Da-Burger!</h1>

<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <input type="text" id="bn" name="burger_name">
  </div>
  <p> Type the name of a burger you'd like to eat </p>
  <button type="submit">Add Burger To Devour!</button>

</form>

<h2>Burgers to be devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR TIME!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>